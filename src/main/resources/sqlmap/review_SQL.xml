<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE  mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="review">
	<insert id="insert_review" parameterType="hashMap" useGeneratedKeys="true" keyProperty="rid">
		<![CDATA[
			INSERT INTO review
				(sid, uid, rcontent, rscore )
			values 
				(#{sid}, #{uid}, #{rcontent}, #{rscore} ) 
		]]>
	</insert>

	<update id="update_review" parameterType="hashMap">
		<![CDATA[
			 UPDATE review 
        	 SET rcontent = #{rcontent}, 
        		 rscore = #{rscore}
       		 WHERE rid = #{rid} 
		]]>
	</update>

	<select id="review_list_by_sid"  parameterType="String" resultType="com.bbang.review.Review">
		<![CDATA[ 
			SELECT * 
			FROM review 
			WHERE sid = #{sid} 
			ORDER BY rid DESC 
		 ]]>
	</select>

	<select id="select_my_review_by_uid" parameterType="String" resultType="com.bbang.review.Review">
		<![CDATA[ 
			SELECT * 
			FROM store 
			WHERE uid = #{uid}
		 ]]>
	</select>

	<delete id="delete_review_by_rid" parameterType="String">
		<![CDATA[ 
			DELETE 
			FROM review 
			WHERE rid = #{rid} 
		 ]]>
	</delete>
</mapper>